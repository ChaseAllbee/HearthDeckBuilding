		  	<%= image_tag("mage.png", class:"deck-sort-icon btn-floating sort-icon") %>
		  	<%= image_tag("paladin.png", class:"deck-sort-icon btn-floating sort-icon") %>
		  	<%= image_tag("priest.png", class:"deck-sort-icon btn-floating sort-icon") %>
